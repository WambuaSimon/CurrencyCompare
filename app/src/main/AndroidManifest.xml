<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.simonwambua.currencycompare">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/btc"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity_BTC">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity_Home" />
        </activity>
        <activity android:name=".Activity_ETH">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity_Home" />
        </activity>
        <activity android:name=".Activity_Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity_BTC_Calculation" />
        <activity android:name=".Activity_ETH_Calculation"></activity>
    </application>

</manifest>